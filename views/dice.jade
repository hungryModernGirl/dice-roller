doctype 
html
    head 
        title #{title} - Roll 'em!
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        form(
            id = 'dice-form'
            action = '/'
            method = 'post')
            select(
                name = 'sides')
                option(
                    value = 4) 4
                option(
                    value = 6) 6
                option(
                    value = 8) 8
                option(
                    value = 10) 10
                option(
                    value = 12) 12
                option(
                    value = 20) 20
            input(
                type='number'
                name='how_many'
                min='0'
                step='1')
            input(
                name='go'
                type='submit'
                value='roll em')
        #result
            if true
                div #{post}
