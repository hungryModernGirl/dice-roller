<form id="dice-form" action="/" method="post">
    <select name="sides">
        <option value=4>4</option>
        <option value=6>6</option>
        <option value=8>8</option>
        <option value=10>10</option>
        <option value=12>12</option>
        <option value=20>20</option>
    <input type="number" name="how_many" min="0" step="1">
    <input type="submit" name="go" value="roll 'em">
</form>
<div id="result">
    {{result}}
</div>
<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var socket = io();
      $('#dice-form').submit(function(){
        socket.emit('dice roll', 'waddup');
        return false;
      });
      socket.on('dice roll', function(msg){
        $('#result').append($('<li>').text(msg));
      });
    </script>